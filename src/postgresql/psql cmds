 CREATE TABLE student
 (
     id bigint,
     first_name character varying ,
     last_name character varying ,
     age integer,
     school_name character varying
 )

insert into student(first_name,last_name,age,id,school_name)
values('Prerna','Jadhav',24,6,'DNS');

insert into student(first_name,last_name,age,id,school_name)
values('Darshan','Patil',26,5,'RRV');

insert into student(first_name,last_name,age,id,school_name)
values('Ankit','Meshram',26,5,'DDY');

update student set id = 4 where first_name = 'Darshan';

------------- Sorting
select * from student order by id ;

select * from student order by id DESC;
